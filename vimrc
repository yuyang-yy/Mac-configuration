syntax enable
syntax on

" Detect file type
filetype on
" Detect file plugin type
filetype plugin on

set number

" Tab and Indent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set smarttab
set autoindent
set smartindent
set cindent

set history=1024
set ruler

" Do not highlight current line
set nocursorline

" Do not backup when overrite file
set nobackup

"set nocompatible " Use the vim's keyboard setting, not vi

" UI settings
set mouse=a
set selection=exclusive
set selectmode=mouse,key

" Search and Match
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch " show brackets matching
set matchtime=5

" Language and encoding
set helplang=en
set encoding=utf-8
set enc=utf-8
set fencs=utf-8,ucs-bom,shift-jis,gb18030,gbk,gb2312,cp936


